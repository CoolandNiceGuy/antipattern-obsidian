---
import PostTags from "./PostTags.astro";
const { title, tags, headings, externalLinks } = Astro.props;
const currentUrl = Astro.url.pathname;
---
<div class="sidebar-container">
  <h3>Headings</h3>
  <ul>
    {
      headings.map((heading) => 
        <li><a href={`${currentUrl}#${heading.slug}`}>{heading.text}</a></li>
      )
    }
  </ul>
  {
    externalLinks && 
    <h3>External Links</h3>
    <ul>
    {
      externalLinks.map((link) =>
        <li><a href={link} target="_blank">{link}</a></li>
      )
    }
    </ul>
  }
</div>

<style>
h3 {
  margin-bottom: 0;
  margin-top: 0;
}

.sidebar-container{
  display: flex;
  flex-direction: column;
  inline-size: 18rem;
  overflow-wrap: break-word;
}

ul {
  list-style: none;
  padding: 0;
  border-bottom: solid black 1px;
  padding-bottom: 1rem;
}

li {
  padding-bottom: .5rem;
  font-size: .8125em;
}

ul:last-of-type{
  border: none;
}

@media (max-width: 72em){
  .sidebar-container{
    display: none;
  }
}
</style>