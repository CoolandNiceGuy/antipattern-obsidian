---
import HeaderBar from '../components/HeaderBar.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<HeaderBar title={title}/>
	<body>
		<aside class="left-aside">
			<slot name="left-sidebar"/>
		</aside>
		<div class="container">
			<slot name="main"/>
		</div>
		<aside class="right-aside">
			<slot name="right-sidebar"/>
		</aside>
	</body>
</html>

<style>
	body {
		margin-top: 108px;
		display: flex;
	}

	.left-aside {
    display: flex;
    /* padding-inline-start: 1.5rem;
    padding-inline-end: 1rem; */
    width: 18rem;
    background: transparent;
    padding-top: 1rem;
		
		position: -webkit-sticky; /* Safari */
  	position: sticky;
  	top: 0;
  }

	.right-aside {
    display: flex;
    /* padding-inline-start: 1.5rem;
    padding-inline-end: 1rem; */
    width: 18rem;
    background: transparent;
    padding-top: 1rem;
  }

	.container{
		margin-left: 2rem;
    margin-inline-end: 18rem;

    padding-bottom: 1rem;
    padding-inline: 1.5rem;
    width: 100%;
    height: 100%;
    max-width: 80ch;
    margin-inline: auto;
	}
</style>